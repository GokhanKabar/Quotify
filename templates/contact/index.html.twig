{% form_theme form 'forms.html.twig' %} 

{% extends 'base.html.twig' %}

{% block title %}Quotify
{% endblock %}

{% block body %}
	<section class="flex flex-col justify-center items-center">
		<div class="bg-white bg-opacity-70 w-full flex md:flex-col lg:flex-row flex-col justify-center items-center h-3/5 p-5">
			<div class="flex flex-col gap-5 text-center">
				<h1 class="lg:text-2xl md:text-6xl text-6xl font-semibold">Contact</h1>
				{{ form_start(form) }}
					{{ form_row(form.firstname) }}
					{{ form_row(form.lastname) }}
					{{ form_row(form.email) }}
					{{ form_row(form.subject) }}
					{{ form_row(form.message) }}
					{% include 'components/_button.html.twig' with {
						'text': 'Envoyer',
						'bgColor': 'blue',
						'textColor': 'white',
						'type': 'submit'
					} %}
				{{ form_end(form) }}
			</div>
		</div>
	</section>

{% endblock %}
