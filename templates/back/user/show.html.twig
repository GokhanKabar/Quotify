{% extends 'admin.html.twig' %}

{% block title %}Détail d'un utilisateur{% endblock %}

{% block body %}
    <div class="flex flex-col p-5 gap-5">
        <div class="flex items-center justify-between">
            <div class="flex">
                <h1 class="lg:text-4xl md:text-2xl text-2xl">Détail d'un utilisateur</h1>
            </div>
            <div class="flex gap-2">
                {% include 'components/_button.html.twig' with {
                    'path': 'back_user_index',
                    'text': 'Retour à la liste',
                    'bgColor': 'blue',
                    'textColor': 'white',
                } %}
                {{ include('back/user/_delete_form.html.twig') }}
                {% include 'components/_button.html.twig' with {
                    'path': 'back_user_edit',
                    'id': user.id,
                    'text': 'Modifier',
                    'bgColor': 'blue',
                    'textColor': 'white',
                } %}
            </div>
        </div>
        {% embed 'components/_table.html.twig' with {
            'arrayLabel': [
                '#', 'Adresse email', 'Rôles', 'Prénom', 'Nom', 'Date de création', 'Date de modification'
            ],
            'properties': [
                'id', 'email', 'roles', 'firstname', 'lastname', 'createdAt', 'updatedAt'
            ],
            'arrayList': [user],
        } %}
        {% endembed %}
    </div>
{% endblock %}
