{% extends 'admin.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="flex flex-col p-5 gap-5">
        <div class="flex items-center justify-between">
            <div class="flex">
                <h1 class="lg:text-4xl md:text-2xl text-2xl">Catégories</h1>
            </div>
            <div class="flex">
                {% include 'components/_button.html.twig' with {
                    'text': 'Créer une nouvelle catégorie',
                    'bgColor': 'blue',
                    'textColor': 'white',
                    'path': 'back_category_new'
                } %}
            </div>
        </div>
        {% embed "components/_table.html.twig" with {
            'arrayLabel': [
                'Nom de la catégorie'
            ],
            'properties': [
                'categoryName'
            ],
            'arrayList': categories,
            'route_show': 'back_category_show',
            'route_edit': 'back_category_edit'
        } %}
        {% endembed %}
    </div>
    <div class="flex justify-center items-center space-x-1 mt-4">
        {% if currentPage > 1 %}
            <a href="{{ path('back_category_index', {'page': currentPage - 1}) }}" class="px-4 py-2 text-gray-700 bg-gray-200 hover:bg-blue-500 hover:text-white rounded-md">Précédent</a>
        {% endif %}
        {% for i in 1..totalPages %}
            <a href="{{ path('back_category_index', {'page': i}) }}" class="px-4 py-2 {{ i == currentPage ? 'text-white bg-blue-500' : 'text-gray-700 bg-gray-200' }} hover:bg-blue-500 hover:text-white rounded-md">{{ i }}</a>
        {% endfor %}
        {% if currentPage < totalPages %}
            <a href="{{ path('back_category_index', {'page': currentPage + 1}) }}" class="px-4 py-2 text-gray-700 bg-gray-200 hover:bg-blue-500 hover:text-white rounded-md">Suivant</a>
        {% endif %}
    </div>
{% endblock %}
