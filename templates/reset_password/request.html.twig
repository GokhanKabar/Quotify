{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">{{ flash_error }}</span>
        </div>
    {% endfor %}

    <section class="relative flex flex-wrap lg:h-screen lg:items-center">
        <div class="w-full px-4 py-12 sm:px-6 sm:py-16 lg:w-1/2 lg:px-8 lg:py-24">
            <div class="mx-auto max-w-lg text-center">
                <h1 class="text-2xl font-bold sm:text-3xl">Rénitialisation du mot de passe</h1>

                <p class="mt-4 mb-4 text-gray-500">
                    Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>
            </div>

            {{ form_start(requestForm, {'attr': {'class': 'mx-auto mb-0 mt-8 max-w-md space-y-4'}}) }}
                {{ form_row(requestForm.email, {'attr': {'class': 'w-full rounded-lg border-primary p-4 pe-12 text-sm shadow-sm focus:outline-none focus:ring focus:border-primary mb-4', 'placeholder': 'Email'}}) }}
                <button class="w-full bg-primary text-white p-2 rounded hover:bg-gray-500">Réinitialiser son mot de passe</button>
            {{ form_end(requestForm) }}

            <div class="flex items-center justify-between mt-4">
                <div class="flex items-center justify-between">
                    <a href="{{ path('app_login') }}" class="text-sm font-medium text-primary hover:underline dark:text-primary"> < Retour connexion</a>
                </div>
            </div>
        </div>

        <div class="relative h-64 w-full sm:h-96 lg:h-full lg:w-1/2">
            <img src="{{ asset('images/password.jpg') }}" class="absolute inset-0 h-full w-full object-cover"/>
        </div>
    </section>
{% endblock %}
