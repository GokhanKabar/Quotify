{% extends 'dashboard.html.twig' %}

{% block title %}Détail d'un produit{% endblock %}

{% block body %}
    <div class="flex flex-col p-5 gap-5">
        <div class="flex items-center justify-between">
            <div class="flex">
                <h1 class="lg:text-4xl md:text-2xl text-2xl">Détail du produit</h1>
            </div>
            <div class="flex gap-2">
                {% include 'components/_button.html.twig' with {
                    'path': 'company_product_index', 
                    'text': 'Retour à la liste', 
                    'bgColor': 'blue', 
                    'textColor': 'white',
                } %}
                
                {% include 'components/_button.html.twig' with {
                    'path': 'company_product_edit',
                    'id': product.id,
                    'text': 'Modifier', 
                    'bgColor': 'blue', 
                    'textColor': 'white',
                } %}
            </div>
        </div>
        {% embed 'components/_table.html.twig' with {
            'arrayLabel': [
                'Nom du produit', 'Description', "Prix à l'unité"
            ],
            'properties': [
                'productName', 'description', 'unitPrice'
            ],
            'arrayList': [product],
        } %}
        {% endembed %}
    </div>
{% endblock %}
