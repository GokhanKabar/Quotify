{% extends 'dashboard.html.twig' %}

{% block title %}Hello ReportController!{% endblock %}

{% block body %}
    <div class="flex flex-col items-center">
        <!-- Graphique des Statuts des Factures -->
        <div class="m-4 w-full max-w-4xl p-4 shadow-lg rounded-lg bg-white">
            <h2 class="text-xl font-semibold mb-2">Statuts des Factures</h2>
            <div class="w-full">
                {{ render_chart(doughnutChart, {'id': 'doughnutChartCanvas', 'class': 'w-full h-64'}) }}
            </div>
            <a href="{{ path('company_export_invoice_status_pdf') }}" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition ease-in-out duration-150">Exporter le statut des factures en PDF</a>
        </div>

        <!-- Graphique des Données de Ventes -->
        <div class="m-4 w-full max-w-4xl p-4 shadow-lg rounded-lg bg-white">
            <h2 class="text-xl font-semibold mb-2">Données de Ventes</h2>
            <div class="w-full">
                {{ render_chart(barChartSale, {'id': 'barChartSaleCanvas', 'class': 'w-full h-64'}) }}
            </div>
            <a href="{{ path('company_export_sales_by_month_pdf') }}" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition ease-in-out duration-150">Exporter les ventes par mois en PDF</a>
        </div>

        <!-- Graphique des Ventes par Produit -->
        <div class="m-4 w-full max-w-4xl p-4 shadow-lg rounded-lg bg-white">
            <h2 class="text-xl font-semibold mb-2">Ventes par Produit</h2>
            <div class="w-full">
                {{ render_chart(barChartProduct, {'id': 'barChartProductCanvas', 'class': 'w-full h-64'}) }}
            </div>
            <a href="{{ path('company_export_sales_data_pdf') }}" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition ease-in-out duration-150">Exporter les données des ventes en PDF</a>
        </div>
    </div>
{% endblock %}
