{# templates/back/customer/index.html.twig #}

{% extends 'dashboard.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <div class="flex flex-col p-5 gap-5">
        <div class="flex items-center justify-between">
            <div class="flex">
                <h1 class="lg:text-4xl md:text-2xl text-2xl">Liste des clients de la société {{ company.companyName }}</h1>
            </div>
            <div class="flex">
                <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="{{ path('company_customer_new') }}">Créer un nouveau client</a>
            </div>
        </div>

        {% embed "_components/_table.html.twig" with {
            'arrayLabel': [
                'Nom', 'Prénom', 'Email', 'Vérifié', 'Créé le', 'Modifié le'
            ],
            'properties': [
                'lastName', 'firstName', 'email', 'verified', 'createdAt', 'updatedAt'
            ],
            'arrayList': users,
            'route_show': 'company_customer_show',
            'route_edit': 'company_customer_edit',
        } %}
        {% endembed %}
    </div>
{% endblock %}