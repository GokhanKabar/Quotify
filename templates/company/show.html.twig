{# templates/user/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails du client{% endblock %}

{% block body %}
    <h1>Détails du client</h1>

    <table>
        <tr>
            <th>Nom :</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Email :</th>
            <td>{{ user.email }}</td>
        </tr>
    </table>

    <a href="{{ path('company_app_company_index') }}">Retour à la liste des clients</a>
    <a href="{{ path('company_app_company_edit', {id: user.id}) }}">Modifier</a>
{% endblock %}
