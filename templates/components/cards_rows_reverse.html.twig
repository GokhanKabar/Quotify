<div class="container mx-auto px-6 py-10">
    <div class="flex flex-wrap items-center">
        <div class="w-full md:w-1/2 md:order-2 md:mb-4">
            <img class="w-full h-auto md:w-50 md:h-auto" src={{ image }} alt="">
        </div>
        <div class="w-full md:w-1/2 md:pl-10 md:order-1">
            <h2 class="text-4xl font-semibold mb-2">
                {{title}}
            </h2>
            <p class="text-gray-700 mb-4">
                {{description}}
            </p>
            <a href={{link}} class="inline-block px-6 py-2 text-white bg-primary rounded hover:bg-gray-500">
                {{button}}
            </a>
        </div>
    </div>
</div>
