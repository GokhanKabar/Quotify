{# components/_button.html.twig #}

<button {% if path is defined %}onclick="window.location.href='{{ path(path, params|default({})|merge({'id': id|default('')})) }}'"{% endif %} class="{{ class|default('') }} bg-{{ bgColor }}-500 hover:bg-{{ bgColor }}-700 text-{{ textColor }} font-bold py-2 px-4 rounded" type="{{ type|default('') }}">
    {{ button_label|default(text|default('Default Text')) }}
</button>
