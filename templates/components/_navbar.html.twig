{# components/_navbar.html.twig #}

<nav class="bg-navbarBg shadow shadow-gray-200 w-100 px-8 md:px-auto">
	<div class="md:h-16 h-28 mx-auto md:px-4 container flex items-center justify-between flex-wrap md:flex-nowrap">
		<div class="text-gray md:order-1">
		<a href="{{ path('front_homepage') }}">
      <img src="{{ asset('images/Logo.png') }}" class="h-15 w-10"/></a>
		</div>
		<div class="text-white order-3 w-full md:w-auto md:order-2">
			<ul class="flex font-semibold justify-between">
				<li class="md:px-4 md:py-2 hover:text-gray-500 {% if app.request.attributes.get('_route') == 'front_homepage' %}text-gray-500{% endif %}"><a href="{{ path('front_homepage') }}">Accueil</a></li>
				<li class="md:px-4 md:py-2 hover:text-gray-500"><a href="{{ path('front_about') }}">À propos</a></li>
				<li class="md:px-4 md:py-2 hover:text-gray-500 {% if app.request.attributes.get('_route') == 'front_contact' %}text-gray-500{% endif %}"><a href="{{ path('front_contact') }}">Contact</a></li>
				{% if app.user and is_granted('ROLE_COMPANY') or is_granted('ROLE_ACCOUNTANT') %}
					<li class="md:px-4 md:py-2 hover:text-gray-500"><a href="{{ path('dashboard') }}">Tableau de bord</a></li>
				{% endif %}
				{% if app.user and is_granted('ROLE_ADMIN') %}
					<li class="md:px-4 md:py-2 hover:text-gray-500"><a href="{{ path('back_user_index') }}">Espace d'administration</a></li>
				{% endif %}
			</ul>
		</div>
		<div class="order-2 md:order-3">
			{% if app.user %}
				<a href="{{ path('app_logout') }}" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-gray-50 rounded-xl flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd" />
					</svg>
					<span>Déconnexion</span>
				</a>
			{% else %}
				<a href="{{ path('app_login') }}" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-gray-50 rounded-xl flex items-center gap-2">
					<!-- Heroicons - Login Solid -->
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd" />
					</svg>
					<span>Connexion</span>
				</a>
			{% endif %}
		</div>
	</div>
</nav>